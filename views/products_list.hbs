<input type="hidden" id="carritoId" value="{{carritoId}}"/>
{{#if usuarioLogin}}
<div class="row" style="height:50px;"><h2>Lista de productos{{#if test}} <span style="color: crimson; font-family: 'Comic Sans MS', cursive, sans-serif;">TEST</span> {{/if}}</h2></div>
<div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-8">
        
        <table class="table table-dark" id="tablaProductos">
            {{#if hayProductos}}
            <thead>
                <tr>
                <th scope="col">Codigo</th>
                <th scope="col">Nombre</th>
                <th scope="col">Precio</th>
                <th scope="col">Imagen</th>
                <th scope="col">Carrito</th>
                {{#if admin}}<th scope="col">Acciones</th>{{/if}}
                </tr>
            </thead>
            <tbody>
                {{#each productList}}
                    <tr>
                        <td>{{this.codigo}}</td>
                        <td>{{this.nombre}}</td>
                        <td>{{this.precio}}</td>
                        <td><img src="{{this.foto}}" alt="{{this.nombre}}" height="50"></td>
                        <td>
                            <input type="number" id="cantidad_{{this.id}}" min="0" value="0" style="width:60px" class="form-inline" />
                            <button class="btn btn-success btn-sm active" onclick="agregarCarrito('{{this.id}}');" >+</button>
                        </td>
                        {{#if ../admin}}
                            <td>
                                <a class="btn btn-primary btn-sm active" href="modificar/{{this.id}}" >Modificar</a> 
                                <button class="btn btn-danger btn-sm active" onclick="borrarProd('{{this.id}}');" >Borrar</button>
                            </td>
                        {{/if}}
                    </tr>
                {{/each}}
            </tbody>
            {{else}}
            <tbody>
                    <tr>
                        <td>No hay productos para mostrar</td>
                    </tr>
            </tbody>
        {{/if}}
        </table>
        <a class="btn btn-primary btn-sm active" role="button" href="/carrito" >Ver carrito</a> 
        <a class="btn btn-info btn-sm active" role="button" href="/instrucciones_api" >Instrucciones para usar las APIs</a>
    </div>
    <div class="col-sm-2"></div>
</div>
{{#if admin}}
<div style="height:50px;">
    <h2>Agregar producto</h2>
</div>
<div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-8">
        <form id="agregarProductos" >
        <label for="codigo">Codigo:</label><br>
        <input class="form-control" type="text" id="codigo" name="codigo"><br>
        <label for="nombre">Nombre:</label><br>
        <input class="form-control" type="text" id="nombre" name="nombre"><br>
        <label for="precio">Precio:</label><br>
        <input class="form-control" type="number" step="0.01" id="precio" name="precio"><br>
        <label for="stock">Stock:</label><br>
        <input class="form-control" type="number" step="1" id="stock" name="stock"><br>
        <label for="foto">Foto:</label><br>
        <input class="form-control" type="text" id="foto" name="foto"><br><br>
        <button class="btn btn-primary btn-sm active" name="submit" value="S" type="submit">Crear</button>
        </form> 
    </div>
    <div class="col-sm-2"></div>
</div>
{{/if}}
{{else}}
<h3>Ingrese con su usuario y contraseña para poder comprar articulos, haga clic en el boton "Login" de la aprte superior</h3>
<a class="btn btn-info btn-sm active" role="button" href="/instrucciones_api" >Instrucciones para usar las APIs</a>
{{/if}}
<div style="height:50px;">
    <h2>Caja de chat (Compresión:<span id='compresion_chat'>100</span>%)</h2>
</div>
<div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-4">
        <div class="chat">
            <div class="chat-history border border-secondary" id="chat-history" >
                <ul id="cajaChat">

                </ul>
            </div> 
            <br>
            
        </div> 
    </div>
    <div class="col-sm-4">
        <label for="mailMsj">E-Mail:</label>
            <input class="form-control" type="text" name="mailMsj" id="mailMsj" placeholder="E-Mail"/>
            <br>
            <label for="nombreMsj">Nombre:</label>
            <input class="form-control" type="text" name="nombreMsj" id="nombreMsj" placeholder="Nombre"/>
            <br>
            <label for="apellidoMsj">Apellido:</label>
            <input class="form-control" type="text" name="apellidoMsj" id="apellidoMsj" placeholder="Apellido"/>
            <br>
            <label for="edadMsj">Edad:</label>
            <input class="form-control" type="number" name="edadMsj" id="edadMsj" placeholder="Edad"/>
            <br>
            <label for="aliasMsj">Alias:</label>
            <input class="form-control" type="text" name="aliasMsj" id="aliasMsj" placeholder="Alias"/>
            <br>
            <label for="avatarMsj">Avatar:</label>
            <input class="form-control" type="text" name="avatarMsj" id="avatarMsj" placeholder="Avatar"/>
            <br>
            <span>Mensaje a enviar:</span> 
            <br>
            <textarea class="form-control" name="mensaje" id="mensaje" placeholder="Mensaje" rows="2" cols="50"></textarea>
            <button class="btn btn-primary btn-sm active" onclick="enviar();">Enviar</button>
    </div>
    <div class="col-sm-2"></div>
</div>


